		<![endif]-->
	
		<?php echo HTML::style('css/style.css'); ?>

		<?php echo HTML::script('js/jquery.js'); ?>

	</head>
	
	<body class="<?php echo $__env->yieldContent('bodyclass'); ?>">
		<?php echo $__env->yieldContent('wrapper'); ?>
		
