<?php
/**
 * Modale de mise à jour d'une action
 *
 * @var Demarche $demarche
 * @var EwbsAction $action
 * @var boolean $edit
 * @var array $aTaxonomy
 * @var array $selectedTags
 * @var array $aExpertises
 * @var Illuminate\Database\Eloquent\Collection $aUsers
 * @var string $returnTo
 */

// TODO: on a du code ici qui aurait plus sa place dans un controller
$revision=$edit ? $action->getLastRevision() : null;
$name=Input::old('name', $edit ? $action->name():null);
$state=Input::old('state', $revision ? $revision->state : null);
$priority=Input::old('priority', $revision ? $revision->priority : EwbsActionRevision::$PRIORITY_NORMAL);
$responsible_id=Input::old('responsible_id', $revision ? $revision->responsible_id : $loggedUser->id);

$piecetask=Input::old('piecetask');
if(!$piecetask && $action) {
	if($action->demarche_piece_id ) {
		$piecetask='piece'.$action->demarche_piece_id;
	}
	elseif($action->demarche_task_id) {
		$piecetask='task'.$action->demarche_task_id;
	}
	elseif($action->demarche_id && $action->eform_id) {
		$piecetask='eform'.$action->eform_id;
	}
}

$piecetasktype=(!$piecetask) ? null : (strpos($piecetask, 'piece')===0 ? 'piece' : (strpos($piecetask, 'task')===0 ? 'task' : 'eform'));
$piecetaskid=(!$piecetask) ? null : str_replace($piecetasktype, '', $piecetask);
$piecetaskname=(!$piecetask) ? null : ($piecetasktype=='piece' ? DemarchePiece::withTrashed()->find($piecetaskid,['name'])->name : ($piecetasktype=='task' ? DemarcheTask::withTrashed()->find($piecetaskid,['name'])->name : Eform::withTrashed()->find($piecetaskid)->name() ));

$fromTriggerUpdate=(isset($fromTriggerUpdate) && $fromTriggerUpdate); // Dans ce cas c'est qu'on vient de la méthode getActionsTriggerUpdate() => créer une action depuis une pièce/tâche
if(!$edit && !$fromTriggerUpdate) {
	$piecestasks=array();
	$piecestasks['eform']=$demarche->getLastRevisionEforms();
	$piecestasks['piece']=$demarche->pieces()->getResults();
	$piecestasks['task']=$demarche->tasks()->getResults();
}

?>
<div class="modal fade noAuto colored-header" id="servermodal" role="dialog" aria-labelledby="servermodal-title">
	<div class="modal-dialog modal-md" role="document">
		<div class="modal-content">
			<form class="form-horizontal" method="post" autocomplete="off" action="<?php echo $edit ? route('demarchesActionsPostEdit', [$demarche->id, $action->id]) :route('demarchesActionsPostCreate', $demarche->id); ?>">
				<input type="hidden" name="_token" value="<?php echo e(csrf_token()); ?>" />
				<input type="hidden" name="fromTriggerUpdate" value="<?php echo $fromTriggerUpdate; ?>" />
				<div class="modal-header">
					<button class="close" aria-label="Fermer"
					<?php if($fromTriggerUpdate): ?>
					type="submit" name="action" value="cancel"
					<?php else: ?>
					type="button" data-dismiss="modal"
					<?php endif; ?>
					><span aria-hidden="true">&times;</span></button>
					<h3 class="modal-title" id="servermodal-title">
						<?php if($fromTriggerUpdate): ?>
						<?php echo Lang::get('admin/demarches/messages.action.modal.title'); ?>

						<?php else: ?>
						<?php echo ($edit ? 'Edition' : 'Création'); ?> d'une action
						<?php endif; ?>
						<span></span>
					</h3>
				</div>
				<div class="modal-body">
					<?php if($fromTriggerUpdate): ?>
					<?php echo Lang::get('admin/demarches/messages.action.modal.intro.create.'.$piecetasktype, ['name'=>$piecetaskname]); ?>

					<?php endif; ?>
					
					<?php /* Name */ ?>
					<div class="form-group">
						<label class="col-md-2 control-label" for="state">Nom</label>
						<div class="col-md-10">
							<select class="form-control select2 <?php echo $errors->has('name') ? 'has-error' : ''; ?>" name="name">
								<?php if(!$edit): ?>
								<option></option>
								<?php endif; ?>
								<?php foreach($aExpertises as $expertise): ?>
								<option <?php echo $expertise==$name ? ' selected': ''; ?>><?php echo $expertise; ?></option>
								<?php endforeach; ?>
							</select>
							<?php echo $errors->first('name', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<?php /* ./ Name */ ?>
					
					<!--Formulaire, pièce ou tâche -->
					<?php if($fromTriggerUpdate): ?>
					<input type="hidden" name="piecetask" value="<?php echo $piecetask; ?>"/>
					<?php elseif(!$edit || $piecetasktype): ?>
					<div class="form-group <?php echo e($errors->has('piecetask') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="piecetask">
						<?php if($edit): ?>
						<?php echo Lang::get('admin/demarches/messages.'.$piecetasktype.'.'.$piecetasktype); ?>

						<?php else: ?>
						<?php echo Lang::get('admin/demarches/messages.eform.eform'); ?><br/>/ <?php echo Lang::get('admin/demarches/messages.piece.piece'); ?><br/>/ <?php echo Lang::get('admin/demarches/messages.task.task'); ?>

						<?php endif; ?>
						</label>
						<div class="col-md-10">
							<select name="piecetask" class="select2">
								<?php if($edit): ?>
									<option value="<?php echo $piecetask; ?>" selected><?php echo $piecetaskname; ?></option>
								<?php else: ?>
									<option></option>
									<?php foreach($piecestasks as $type=>$items): ?>
										<?php $selected = false; ?>
										<optgroup label="<?php echo Lang::get("admin/demarches/messages.{$type}.{$type}"); ?>">
										<?php foreach($items as $item): ?>
											
											<?php if($type=='eform'): ?>
											<?php
											$component=$item->$type;
											$value = $type . $component->id;
											if($value==$piecetask) $selected=true;
											?>
											<option value="<?php echo $value; ?>"<?php echo $value==$piecetask ? ' selected': ''; ?>><?php echo $component->name(); ?></option>
											
											<?php else: ?>
											<?php
											$value = $type . $item->id;
											if($value==$piecetask) $selected=true;
											?>
											<option value="<?php echo $value; ?>"<?php echo $value==$piecetask ? ' selected': ''; ?>><?php echo $item->name(); ?></option>
											<?php endif; ?>
											
										<?php endforeach; ?>
										<?php if($edit && !$selected && $piecetasktype==$type): ?> <?php /* Réinclure une option en + avec la pièce, tâche ou formulaire courant, dans le cas où celle-ci ne serait pas dans la liste constituée (supprimée au niveau de la démarche-pièce|tâche|formulaire) */ ?>
											<option value="<?php echo $type; ?><?php echo $piecetaskid; ?>" selected><?php echo $piecetaskname; ?></option>
										<?php endif; ?>
										</optgroup>
									<?php endforeach; ?>
								<?php endif; ?>
							</select><small class="pull-right"><?php echo Lang::get('general.optional'); ?></small><?php echo $errors->first('piecetask', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<!-- ./ Formulaire, pièce ou tâche -->
					<?php endif; ?>
					
					<!-- Description -->
					<div class="form-group <?php echo e($errors->has('description') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="description">Description</label>
						<div class="col-md-10">
							<textarea class="form-control" name="description" placeholder="Description" rows="6"><?php echo e(Input::old('description', $revision ? $revision->description : null)); ?></textarea>
							<?php echo $errors->first('description', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<!-- ./ Description -->
					
					<!-- State -->
					<?php if($edit): ?>
					<div class="form-group <?php echo e($errors->has('state') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="state">Etat</label>
						<div class="col-md-10">
							<select class="form-control" name="state"<?php echo ($action->sub && $action->eachSub()->count()>0)?' disabled title="L\'état est automatiquement défini par les sous-actions"':''; ?>>
								<?php foreach(EwbsActionRevision::states() as $s): ?>
								<option value="<?php echo $s; ?>"<?php echo $s==$state ? ' selected': ''; ?>><?php echo Lang::get( "admin/ewbsactions/messages.state.{$s}"); ?></option>
								<?php endforeach; ?>
							</select>
							<?php echo $errors->first('state', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<?php else: ?>
					<input type="hidden" name="state" value="<?php echo EwbsActionRevision::$STATE_TODO; ?>"/>
					<?php endif; ?>
					<!-- ./ State -->
					
					<?php /* Priority */ ?>
					<div class="form-group <?php echo e($errors->has('priority') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="priority">Priorité</label>
						<div class="col-md-10">
							<select class="form-control" name="priority"<?php echo $loggedUser->can('ewbsaction_prioritize')?' ':' disabled'; ?>>
							<?php foreach(EwbsActionRevision::priorities() as $p): ?>
								<option value="<?php echo $p; ?>"<?php echo $p==$priority ? ' selected': ''; ?>><?php echo Lang::get( "admin/ewbsactions/messages.priority.{$p}"); ?></option>
							<?php endforeach; ?>
							</select>
							<?php echo $errors->first('priority', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<?php /* ./ Priority */ ?>
					
					<?php /* Responsible */ ?>
					<?php if($edit): ?>
					<div class="form-group">
						<label class="col-md-2 control-label" for="state">Responsable</label>
						<div class="col-md-10">
							<select class="form-control select2" name="responsible_id">
							<?php foreach($aUsers as $user): ?>
								<option value="<?php echo $user->id; ?>"<?php echo $user->id==$responsible_id ? ' selected': ''; ?>><?php echo $user->username; ?></option>
							<?php endforeach; ?>
							</select>
						</div>
					</div>
					<?php endif; ?>
					<?php /* ./ Responsible */ ?>

					<?php /* Taxonomie */ ?>
					<div class="form-group">
						<label class="col-md-2 control-label" form="tags">Tags</label>
						<div class="col-md-10">
							<!-- tags -->
							<?php
							// recherche de l'élément à selectionner
							if (Input::old('tags'))
								$selectedTags = Input::old('tags'); //selectedTags est initialisé par le controller. Normalement on aura jamais de POST car c'est une modale qui sauve en ajax.
							?>
							<select class="form-control select2" name="tags[]" id="tags" multiple>
								<?php foreach($aTaxonomy as $category): ?>
									<optgroup label="<?php echo $category->name; ?>">
										<?php foreach($category->tags as $tag): ?>
											<option value="<?php echo $tag->id; ?>"<?php echo in_array($tag->id, $selectedTags) ? ' selected': ''; ?>><?php echo $tag->name; ?></option>
										<?php endforeach; ?>
									</optgroup>
								<?php endforeach; ?>
							</select><small class="pull-right"><?php echo Lang::get('general.optional'); ?></small></div>
					</div>
					<?php /* ./ Taxonomie */ ?>

					<?php /* sous actions // ne s'affiche que si on a une action (donc pas dans le cas de la création d'une action */ ?>
					<?php if($edit): ?>
						<div class="form-group">
							<label class="col-md-2 control-label">Sous-actions</label>
							<div class="col-md-10">
								<div class="table-responsive">
									<table class="table table-hover datatable" data-ajaxurl="<?php echo route('ewbsactionsSubGetData', $action->id); ?>?minimal=true">
										<thead>
											<tr>
												<th class="col-md-1">#</th>
												<th>Nom</th>
												<th class="col-md-1">Etat</th>
												<th class="col-md-1">Priorité</th>
											</tr>
										</thead>
										<tbody>
										</tbody>
									</table>
								</div>
								<a class="btn btn-primary pull-right" href="<?php echo route('ewbsactionsGetView',$action->id)#subactions; ?>">Gérer les sous-actions</a>
							</div>
						</div>
					<?php endif; ?>
				</div>
				<div class="modal-footer">
					<?php if($fromTriggerUpdate): ?>
					<button class="btn btn-default" type="submit" name="action" value="cancel">Non merci</button>
					<?php else: ?>
					<button class="btn btn-default" type="button" data-dismiss="modal"><?php echo Lang::get('button.cancel'); ?></button>
					<?php endif; ?>
					<button type="submit" name="action" value="save" class="btn btn-primary"><?php echo Lang::get('button.save'); ?></button>
				</div>
			</form>
		</div>
	</div>
</div>