<?php
/**
 * @var Eform $modelInstance
 * @var EwbsAction $action
 * @var array $aTaxonomy
 * @var array $selectedTags
 * @var array $aExpertises
 * @var Illuminate\Database\Eloquent\Collection $aUsers
 */
$revision=$edit ? $action->getLastRevision() : null;
$name=Input::old('name', $edit ? $action->name():null);
$state=Input::old('state', $revision ? $revision->state : null);
$priority=Input::old('priority', $revision ? $revision->priority : EwbsActionRevision::$PRIORITY_NORMAL);
$responsible_id=Input::old('responsible_id', $revision ? $revision->responsible_id : $loggedUser->id);

?>
<div class="modal fade noAuto colored-header" id="servermodal" tabindex="-1" role="dialog" aria-labelledby="servermodal-title">
	<div class="modal-dialog modal-md" role="document">
		<div class="modal-content">
			<form class="form-horizontal" method="post" autocomplete="off" action="<?php echo $edit ? route('eformsActionsPostEdit', [$modelInstance->id, $action->id]) :route('eformsActionsPostCreate', $modelInstance->id); ?>">
				<input type="hidden" name="_token" value="<?php echo e(csrf_token()); ?>" />
				<div class="modal-header">
					<button class="close" aria-label="Fermer" type="button" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
					<h3 class="modal-title" id="servermodal-title">
						<?php echo ($edit ? 'Edition' : 'Création'); ?> d'une action
						<span></span>
					</h3>
				</div>
				<div class="modal-body">
					<!-- Nom -->
					<div class="form-group <?php echo e($errors->has('name') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="name">Nom</label>
						<div class="col-md-10">
							<select class="form-control select2 <?php echo $errors->has('name') ? 'has-error' : ''; ?>" name="name">
								<?php if(!$edit): ?>
								<option></option>
								<?php endif; ?>
								<?php foreach($aExpertises as $expertise): ?>
								<option <?php echo $expertise==$name ? ' selected': ''; ?>><?php echo $expertise; ?></option>
								<?php endforeach; ?>
							</select>
							<?php echo $errors->first('name', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<!-- ./ Nom -->
					
					<!-- Description -->
					<div class="form-group <?php echo e($errors->has('description') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="description">Description</label>
						<div class="col-md-10">
							<textarea class="form-control" name="description" placeholder="Description" rows="6"><?php echo e(Input::old('description', $revision ? $revision->description : null)); ?></textarea>
							<?php echo $errors->first('description', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<!-- ./ Description -->
					
					<!-- State -->
					<?php if($edit): ?>
					<div class="form-group <?php echo e($errors->has('state') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="state">Etat</label>
						<div class="col-md-10">
							<select class="form-control" name="state">
								<?php foreach(EwbsActionRevision::states() as $s): ?>
								<option value="<?php echo $s; ?>"<?php echo $s==$state ? ' selected': ''; ?>><?php echo Lang::get( "admin/ewbsactions/messages.state.{$s}"); ?></option>
								<?php endforeach; ?>
							</select>
							<?php echo $errors->first('state', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<?php else: ?>
					<input type="hidden" name="state" value="<?php echo EwbsActionRevision::$STATE_TODO; ?>"/>
					<?php endif; ?>
					<!-- ./ State -->

					<?php /* Priority */ ?>
					<div class="form-group <?php echo e($errors->has('priority') ? 'has-error' : ''); ?>">
						<label class="col-md-2 control-label" for="priority">Priorité</label>
						<div class="col-md-10">
							<select class="form-control" name="priority"<?php echo $loggedUser->can('ewbsaction_prioritize')?' ':' disabled'; ?>>
								<?php foreach(EwbsActionRevision::priorities() as $p): ?>
									<option value="<?php echo $p; ?>"<?php echo $p==$priority ? ' selected': ''; ?>><?php echo Lang::get( "admin/ewbsactions/messages.priority.{$p}"); ?></option>
								<?php endforeach; ?>
							</select>
							<?php echo $errors->first('priority', '<span class="help-inline">:message</span>'); ?>

						</div>
					</div>
					<?php /* ./ Priority */ ?>
					
					<?php /* Responsible */ ?>
					<?php if($edit): ?>
					<div class="form-group">
						<label class="col-md-2 control-label" for="state">Responsable</label>
						<div class="col-md-10">
							<select class="form-control select2" name="responsible_id">
							<?php foreach($aUsers as $user): ?>
								<option value="<?php echo $user->id; ?>"<?php echo $user->id==$responsible_id ? ' selected': ''; ?>><?php echo $user->username; ?></option>
							<?php endforeach; ?>
							</select>
						</div>
					</div>
					<?php endif; ?>
					<?php /* ./ Responsible */ ?>
					
					<?php /* Taxonomie */ ?>
					<div class="form-group">
						<label class="col-md-2 control-label" form="tags">Tags</label>
						<div class="col-md-10">
							<!-- tags -->
							<?php
							// recherche de l'élément à selectionner
							if (Input::old('tags'))
								$selectedTags = Input::old('tags'); //selectedTags est initialisé par le controller. Normalement on aura jamais de POST car c'est une modale qui sauve en ajax.
							?>
							<select class="form-control select2" name="tags[]" id="tags" multiple>
								<?php foreach($aTaxonomy as $category): ?>
									<optgroup label="<?php echo $category->name; ?>">
										<?php foreach($category->tags as $tag): ?>
											<option value="<?php echo $tag->id; ?>"<?php echo in_array($tag->id, $selectedTags) ? ' selected': ''; ?>><?php echo $tag->name; ?></option>
										<?php endforeach; ?>
									</optgroup>
								<?php endforeach; ?>
							</select><small class="pull-right"><?php echo Lang::get('general.optional'); ?></small></div>
					</div>
					<?php /* ./ Taxonomie */ ?>
					
				</div>
				<div class="modal-footer">
					<button class="btn btn-default" type="button" data-dismiss="modal"><?php echo Lang::get('button.cancel'); ?></button>
					<button type="submit" name="action" value="save" class="btn btn-primary"><?php echo Lang::get('button.save'); ?></button>
				</div>
			</form>
		</div>
	</div>
</div>