		<div class="block-flat">
			<div class="content">
				<?php if($links): ?>
					<?php if($model->deletableIfLinked()): ?>
	<div class="alert alert-warning alert-white rounded">
		<div class="icon">
			<i class="fa fa-exclamation-triangle"></i>
		</div>
		<strong>Attention! </strong><?php echo ( Lang::get ( 'admin/'.$model->getModelLabel().'/messages.delete.linked' ) ); ?>
	</div>
					<?php else: ?>

	<div class="alert alert-danger alert-white rounded">
		<div class="icon">
			<i class="fa fa-exclamation-triangle"></i>
		</div>
		<strong>Aie! </strong><?php echo ( Lang::get ( 'admin/'.$model->getModelLabel().'/messages.delete.linked' ) ); ?>
	</div>
					<?php endif; ?>
					<?php foreach($links as $linktype): ?>
					<div>
						<h4><?php echo $linktype['label']; ?> (<?php echo count($linktype['items']); ?>)</h4>
						<ul>
							<?php foreach($linktype['items'] as $item): ?>
							<li>
								<?php if(empty($item['deleted_at'])): ?>
								<a href="<?php echo route($linktype['route'], $item['id']); ?>" target="_blank"><?php echo $item['name']; ?></a>
								<?php else: ?>
								<?php echo $item['name']; ?> (Dans la corbeille depuis le <i><?php echo $item['deleted_at']; ?></i>)
								<?php endif; ?>
							</li>
							<?php endforeach; ?>
						</ul>
					</div>
					<?php endforeach; ?>
					<p><br/></p>
				<?php endif; ?>
				
				<?php if(empty($links) || $model->deletableIfLinked()): ?>
				<form id="deleteForm" class="form-horizontal" method="post" autocomplete="off" action="<?php echo $modelInstance->routePostDelete(); ?>">
					<input type="hidden" name="_token" value="<?php echo e(csrf_token()); ?>" />
					<p><?php echo Lang::get ('admin/'.$model->getModelLabel().'/messages.delete.detail', ['name'=>$modelInstance->name()]); ?></p>
					<div class="controls">
						<a class="btn btn-cancel" href="<?php echo $modelInstance->hasView()?$modelInstance->routeGetView():$modelInstance->routeGetIndex(); ?>"><?php echo Lang::get('button.cancel'); ?></a>
						<button type="submit" class="btn btn-danger">Confirmer la suppression</button>
					</div>
				</form>
				<?php else: ?>
					<?php if($model->hasView()): ?>
					<a class="btn btn-cancel" href="<?php echo $modelInstance->routeGetView(); ?>">Retour au détail</a>
					<?php else: ?>
					<a class="btn btn-cancel" href="<?php echo $model->routeGetIndex(); ?>">Retour à la liste</a>
					<?php endif; ?>
				<?php endif; ?>
			</div>
		</div>
	</div>
</div>
